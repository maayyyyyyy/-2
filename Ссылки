#include <iostream>
#include <string>

void scene1();
void scene2();
void scene3_bad();
void scene3_good();

int main() {
    std::cout << "Добро пожаловать в нашу текстовую новеллу!\n";
    std::cout << "Ты начинаешь свой день в маленьком городе. Что ты хочешь сделать?\n";
    std::cout << "1. Пойти в лес.\n";
    std::cout << "2. Остаться дома.\n";
    
    int choice;
    std::cin >> choice;

    if (choice == 1) {
        scene1();
    } else if (choice == 2) {
        scene2();
    } else {
        std::cout << "Неправильный выбор, попробуйте снова.\n";
    }

    return 0;
}

void scene1() {
    std::cout << "Ты отправился в лес и встретил таинственного старца.\n";
    std::cout << "1. Поговорить со старцем.\n";
    std::cout << "2. Игнорировать старца и продолжить путь.\n";

    int choice;
    std::cin >> choice;

    if (choice == 1) {
        scene3_good();
    } else if (choice == 2) {
        scene3_bad();
    } else {
        std::cout << "Неправильный выбор, попробуйте снова.\n";
    }
}

void scene2() {
    std::cout << "Ты остался дома и заснул. Ничего интересного не произошло.\n";
    std::cout << "Конец игры.\n";
}

void scene3_bad() {
    std::cout << "Ты проигнорировал старца и заблудился в лесу. Конец игры.\n";
}

void scene3_good() {
    std::cout << "Старец дал тебе магический артефакт, который спасёт твой город. Ты победил! Конец игры.\n";
}
