#include <iostream>
#include <string>
using namespace std;

void scene1();
void scene2();
void scene3_bad();
void scene3_good();

int main() {
    setlocale(LC_ALL, "Russian");
    
    cout << "Вы едете в маршрутке после работы домой. От усталости ваши  глаза постепенно слипаются и вы постепенно погружаетесь в сон.\n";
    cout << "Проснувшись вы обнаруживаете что вы одни в трамвае. <Неужели меня проста так здесь оставили?> \n"; 
    cout << "Остаться в маршрутке?..\n";
    cout << "1. Да\n";
    cout << "2. Нит\n";

    int choice;
    cin >> choice;

    if (choice == 1) {
        scene1();//Остались в маршрутке
    }
    else if (choice == 2) {
        scene2();//Вышли
    }
    else {
        cout << "Дебил,только 1 или 2. Давай с начала!!! \n";
    }

    return 0;
}

void scene1() {
    cout << "Вы решили остаться в маршрутке и подождать. Не могли же про вас забыть. Спустя некоторое время с наружи издается какие-то звуки.\n"; 
    cout << "Проверить? \n"; 
    cout << "1. Да\n";
    cout << "2. Нит\n";

    int choice;
    cin >> choice;

    if (choice == 1) {
        scene3_good();
    }
    else if (choice == 2) {
        scene3_bad();
    }
    else {
        cout << "Дебил не порть атмосферу либо 1 либо 2\n";
    }
}

void scene2() {
    cout << "Ты остался дома и заснул. Ничего интересного не произошло.\n";
    cout << "Конец игры.\n";
}

void scene3_bad() {
    cout << "Ты проигнорировал старца и заблудился в лесу. Конец игры.\n";
}

void scene3_good() {
    cout << "Старец дал тебе магический артефакт, который спасёт твой город. Ты победил! Конец игры.\n";
}
