void dysh();
void serial();
void vsil();
void ne_vsial();

int main() {
    setlocale(LC_ALL, "Russian");
    //Начало
    cout << "Вы едете в маршрутке после работы домой. От усталости ваши  глаза постепенно слипаются и вы постепенно погружаетесь в сон.\n";
    cout << "Проснувшись вы обнаруживаете что вы одни в трамвае. <Неужели меня проста так здесь оставили?> \n"; 
    cout << "Остаться в маршрутке?..\n";
    cout << "1. Да\n";
    cout << "2. Нит\n";

    int choice;
    cin >> choice;

    if (choice == 1) {
        in_bus();
    }
    else if (choice == 2) {
        out_bus();
    }
    else {
        cout << "Дебил,только 1 или 2. Давай с начала!!! \n";
    }

    return 0;
}


//Смертельная ветка
void in_bus() {
    cout << "Вы решили остаться в маршрутке и подождать. Не могли же про вас забыть. Спустя некоторое время с наружи издается какие-то звуки.\n"; 
    cout << "Проверить? \n"; 
    cout << "1. Да\n";
    cout << "2. Нит\n";

    int choice;
    cin >> choice;

    if (choice == 1) {
        proverit_bad();
    }
    else if (choice == 2) {
        ne_proverit_bad();
    }
    else {
        cout << "Дебил не порть атмосферу либо 1 либо 2\n";
    }
}

void proverit_bad() {
    cout << "Вы решаете выйти и проверить, что это за звуки \n";
    cout << "На улице вы видите огромное существо, похожее на медведя, которое ходит вокруг маршрутки.\n";
    cout << "Что делать?\n";
    cout << "1.Спрятаться\n";
    cout << "2.Бежать\n";
    
        int choice;
    cin >> choice;

    if (choice == 1) {
        pritat_bad();
    }
    else if (choice == 2) {
        bejat_bad();
    }
    else {
        cout << "Дебил не порть атмосферу либо 1 либо 2\n";
    }
}

void bejat_bad () {
    cout << "Вы решили бежать, но не успев сделать и шага падаете от лап монстра. Видимо он учуял ваш запах.\n";
    cout << "Вы умерли, дорогой игрок.\n Попробуйте снова\n ";
}
    
void pritat_bad () {
    cout << "Вы решили вернуться в салон, но не успев сделать и шага падаете от лап монстра. Видимо он учуял ваш запах.\n";
    cout << "Вы умерли, дорогой игрок.\n Попробуйте снова\n ";
}
void ne_proverit_bad () {
    cout << "<Скорее всего это вернулся водитель>, думаете вы и не выходите на улицу.\n";
    cout << "Но через некоторое время звуки становятся всё интенсивнее. Кто-то явно пытается выломать дверь.\n";
    cout << "Через время она поддается и последнее, что вы видите это огромное черное существо, несущееся к вам\n";
    cout << "Вы умерли, дорогой игрок.\n Попробуйте снова\n ";
}



// Живая ветка
void out_bus() { 
    cout << "Вы вышли из маршрутки и увидели, что стоите на углу двух улиц, которые оказались вам знакомы \n";
    cout << "Куда идти?"
    cout << "1. По главной дороге, но дольше\n";
    cout << "2. По дворам, но быстрее\n";
}

int choice;
    cin >> choice;

    if (choice == 1) {
        dolshe();
    }
    else if (choice == 2) {
        menshe();
    }
    else {
        cout << "Дебил не порть атмосферу либо 1 либо 2\n";
    }
}

void menshe () {
    cout << "Вы решили пойти коротким путем, но во дворах оказалось очень темно \n";
